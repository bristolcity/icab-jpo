<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#EEEBEB"
    android:layout_height="match_parent"
    tools:context=".MainActivity">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:text="A Propos De Nous :" />
            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_gravity="center"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="20dp"
                android:layout_height="200dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/firstcard"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="10dp"
                        android:textSize="19dp"
                        android:text="L'application icab-jpo est un projet qui a ete pense pour attirer le grand public et les captiver par son design et la diversite des informations qu'elle diffuse." />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:text="OU Sommes Nous :" />
            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_gravity="center"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="20dp"
                android:layout_height="200dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/secondcard"
                    android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="20dp"
                    android:textSize="19dp"
                    android:text="L'application icab-jpo a ete developpe par un groupe d'Etudiants de cette meme Universite. \n Ceux-ci etant de la Specialite Genie Logiciel." />
                </LinearLayout>
            </androidx.cardview.widget.CardView>




        </LinearLayout>
    </ScrollView>
</LinearLayout>